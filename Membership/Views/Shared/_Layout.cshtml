<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - اتحاد الطلبة السوريين</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* تعديل النافبار لضمان عدم التآكل */
        .navbar-custom {
            background-color: #1f4c8b !important;
            min-height: 80px; /* يمنع التآكل من الأسفل */
            display: flex;
            align-items: center;
            border: none;
        }

        /* توزيع العناصر يدوياً لضمان اليمين واليسار */
        .nav-wrapper {
            display: flex;
            justify-content: space-between; /* يدفع العناصر للأطراف */
            align-items: center;
            width: 100%;
        }

        .navbar-custom .nav-link {
            color: white !important;
            font-weight: 500;
            margin-left: 20px; /* مسافة بين الروابط في الموقع العربي */
        }

        .navbar-custom .navbar-brand img {
            height: 55px;
            width: auto;
        }

        main {
            margin: 0;
            padding: 0;
        }

        footer {
            background-color: white;
            padding: 15px 0;
            border-top: 1px solid #dee2e6;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
            <div class="container">
                <div class="nav-wrapper">

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item"><a class="nav-link" asp-action="Index">الصفحة الرئيسية</a></li>
                            <li class="nav-item"><a class="nav-link" asp-action="Privacy">سياسة الخصوصية</a></li>
                            <li class="nav-item"><a class="nav-link" asp-action="Register">انضم إلينا</a></li>
                        </ul>
                    </div>

                    <button class="navbar-toggler border-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
                    </button>

                    <a class="navbar-brand m-0 p-0" asp-controller="Home" asp-action="Index">
                        <img src="~/logo-large.png" alt="Logo">
                    </a>

                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container text-muted">
            &copy; 2026 - اتحاد الطلبة السوريين في سكاريا
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>